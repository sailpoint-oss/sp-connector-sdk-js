{
	"name": "@sailpoint/connector-sdk",
	"version": "1.0.0",
	"description": "JavaScript framework to build SailPoint Connectors",
	"author": "SailPoint Technologies, Inc.",
	"license": "Copyright (c) 2023. SailPoint Technologies, Inc. All rights reserved.",
	"keywords": [
		"sailpoint",
		"connector"
	],
	"main": "dist/lib/index.js",
	"types": "dist/lib/index.d.ts",
	"bin": {
		"spcx": "dist/bin/spcx.js"
	},
	"files": [
		"dist/**/*"
	],
	"engines": {
		"node": ">=16.2.0"
	},
	"scripts": {
		"clean": "shx rm -rf ./dist ./coverage",
		"prebuild": "npm run clean",
		"build": "npx tsc",
		"prettier": "npx prettier --write .",
		"test": "jest --coverage",
		"prepare": "npm run build"
	},
	"dependencies": {
		"archiver": "^5.3.1",
		"express": "^4.17.1",
		"pino": "^8.5.0"
	},
	"devDependencies": {
		"@tsconfig/node16": "1.0.1",
		"@types/archiver": "^5.3.1",
		"@types/express": "^4.17.13",
		"@types/jest": "^28.1.2",
		"@types/node": "^16.4.12",
		"@types/semver": "^7.3.6",
		"jest": "^28.1.1",
		"mock-fs": "^5.1.0",
		"prettier": "2.3.2",
		"semver": "^7.3.5",
		"shx": "^0.3.4",
		"ts-jest": "^28.0.5",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.5"
	},
	"overrides": {
		"minimist": "^1.2.6",
		"debug": "^4.3.4"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"examples"
		],
		"clearMocks": true,
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"statements": 88,
				"branches": 88,
				"functions": 88,
				"lines": 88 
			}
		}
	},
	"prettier": {
		"printWidth": 120,
		"trailingComma": "es5",
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true
	}
}
